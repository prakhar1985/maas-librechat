---
apiVersion: v1
kind: Secret
metadata:
  name: librechat-credentials-env
  namespace: {{ ocp4_workload_librechat_mcp_namespace }}
  labels:
    app: librechat
    workload: librechat-mcp
type: Opaque
stringData:
  # LibreChat internal encryption keys
  # These are auto-generated for security
  CREDS_KEY: {{ _ocp4_workload_librechat_mcp_key32 }}
  JWT_SECRET: {{ _ocp4_workload_librechat_mcp_key32 }}
  JWT_REFRESH_SECRET: {{ _ocp4_workload_librechat_mcp_key32 }}

  # Meilisearch master key
  # Auto-generated for security
  MEILI_MASTER_KEY: {{ _ocp4_workload_librechat_mcp_key16 }}

{% if not ocp4_workload_librechat_mcp_skip_litemaas %}
  # LiteMaaS endpoint configuration
  # IMPORTANT: If CUSTOM_MODEL_KEY is empty, users must add their own API key
  # See docs/POST_INSTALL.md for instructions
  CUSTOM_MODEL_URL: {{ ocp4_workload_librechat_mcp_litemaas_url }}
  CUSTOM_MODEL_KEY: "{{ ocp4_workload_librechat_mcp_litemaas_api_key | default('REPLACE_WITH_YOUR_LITEMAAS_API_KEY', true) }}"
{% endif %}

  # Default admin user credentials
  # Used by the user initialization job
  USER_NAME: "{{ ocp4_workload_librechat_mcp_admin_username }}"
  USER_EMAIL: "{{ ocp4_workload_librechat_mcp_admin_username }}@{{ ocp4_workload_librechat_mcp_email_domain }}"
  USER_PASSWORD: "{{ ocp4_workload_librechat_mcp_admin_password }}"
