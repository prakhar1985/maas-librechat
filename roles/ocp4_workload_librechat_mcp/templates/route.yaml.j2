---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: librechat
  namespace: {{ ocp4_workload_librechat_mcp_namespace }}
  labels:
    app: librechat
    workload: librechat-mcp
spec:
  port:
    targetPort: http
  to:
    kind: Service
    name: librechat
    weight: 100
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
  wildcardPolicy: None
